# UFO API Configuration Template
# Copy this file to .env and fill in your actual API keys and endpoints
# NEVER commit the .env file to version control!

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1/chat/completions
OPENAI_MODEL=gpt-4-vision-preview

# Azure OpenAI Configuration (uncomment and use if needed)
# AZURE_OPENAI_API_KEY=your_azure_openai_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
# AZURE_OPENAI_DEPLOYMENT_ID=gpt-4-visual-preview
# AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure Speech Services (uncomment and use if needed)
# AZURE_SPEECH_KEY=your_speech_key_here
# AZURE_SPEECH_REGION=your_region_here

# Azure AD Configuration (uncomment and use if needed)
# AZURE_TENANT_ID=your_tenant_id_here
# AZURE_API_SCOPE=your_scope_here
# AZURE_API_SCOPE_BASE=your_scope_base_here

# Personal Settings
USER_NAME=Your Name Here
PREFERRED_VOICE=female
WORKSPACE_PATH=C:\Users\yourusername\Documents

# Application Settings
DEBUG_MODE=false
LOG_LEVEL=INFO
AUTO_SAVE=true

# UFO Framework Settings
UFO_VISUAL_MODE=true
UFO_MODEL=gpt-4-vision-preview

# Optional: Override default model parameters
# MAX_TOKENS=2000
# TEMPERATURE=0.0
# TOP_P=0.0
# TIMEOUT=60
